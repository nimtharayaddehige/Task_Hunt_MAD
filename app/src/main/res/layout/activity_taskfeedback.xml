<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ResetButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".taskfeedback">

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="413dp"

        android:layout_height="63dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton

            android:id="@+id/menuButton"
            android:layout_width="53dp"
            android:layout_height="64dp"
            android:background="#BFBBCB"
            android:contentDescription="menu"
            android:src="@drawable/baseline_dehaze_24" />

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_marginBottom="580dp"
            android:src="@drawable/welcome1__2_"
            app:srcCompat="@drawable/welcome1__2_" />

        <EditText
            android:id="@+id/searchBar"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="242dp"
            android:layout_height="64dp"
            android:background="#EFEFEF"
            android:hint="        What are you looking for" />

        <ImageButton
            android:id="@+id/notificationButton"
            android:layout_width="54dp"
            android:layout_height="63dp"
            android:background="#BFBBCB"
            android:contentDescription="Notifications"
            android:src="@drawable/baseline_edit_notifications_24"
            tools:srcCompat="@drawable/baseline_edit_notifications_24" />

    </LinearLayout>
    <ImageButton
        android:id="@+id/backButtonImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:contentDescription="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"
        app:srcCompat="@drawable/code5" />


    <TextView
        android:id="@+id/feedbacktopic"
        android:layout_width="343dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="CompanyFeedback"
        android:textColor="#04002F"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/backButtonImage"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="798dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedbacktopic">

        <TextView
            android:id="@+id/feedbackInput1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/border"
            android:gravity="top"
            android:padding="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Rating"
            android:textColor="#130036"
            android:textSize="19sp" />

        <!-- Star Rating -->
        <RatingBar
            android:id="@+id/starRating1"
            android:layout_width="254dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1.0"
            android:theme="@style/Widget.AppCompat.RatingBar" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="327dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:text="Task Feedback and Review"
            android:textColor="#04002F"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/backButtonImage"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10" />

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Share Your Thoughts?"
            android:textColor="#130036"
            android:textSize="19sp" />

        <!-- Feedback Text Input -->
        <EditText
            android:id="@+id/feedbackInput"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/border"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp"
            />


        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="How was your experience?"
            android:textColor="#130036"
            android:textSize="19sp" />

        <!-- Star Rating -->
        <RatingBar
            android:id="@+id/starRating"
            android:layout_width="254dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            android:numStars="5"
            android:rating="0"
            android:stepSize="1.0"
            android:theme="@style/Widget.AppCompat.RatingBar" />

        <Button
            android:id="@+id/button3"
            android:layout_width="154dp"
            android:layout_height="52dp"
            android:text="Send"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView2"
        android:layout_width="410dp"
        android:layout_height="69dp"
        app:backgroundTint="#9293A9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_of_menu"
        app:itemIconTint="#FFFF"
        app:itemIconSize="32dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>